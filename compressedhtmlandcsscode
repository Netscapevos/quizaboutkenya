rentQuestion=questions[currentQuestionIndex];document.getElementById("questionText").textContent=currentQuestion.q;document.getElementById("questionNumber").textContent="Question: "+(currentQuestionIndex+1);document.getElementById("result").textContent="";document.querySelectorAll(".choice").forEach((choice,index)=>{choice.textContent=currentQuestion.o[index];choice.style.pointerEvents="auto";choice.style.backgroundColor="#222";choice.style.color="white"})}else{document.getElementById("quizContainer").innerHTML=`<div class="result" style="font-size: 3rem;">Quiz Finished! Your score: ${score}/${questions.length}</div>`;document.getElementById("visaMessage").innerHTML="ðŸ‡°ðŸ‡ª Kenya is visa-free! You can submit your application online, and everyone can get a visa in under 100 hours to come and visit Kenya! Do visit us!"}};</script></body></html>
